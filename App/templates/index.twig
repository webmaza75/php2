{% extends 'index-twig.html' %}
{% block heading %} Все новости {% endblock heading %}
{% block content %}
    {% for item in news %}
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <a href="/news/one?id={{ item.id }}">
                        {% if item.title is defined %}
                            {{ item.title }}
                        {% else %}
                            -= Без заголовка =-
                        {% endif %}
                    </a>
                </h3>
            </div>
            <div class="panel-body"> Автор:
                {% if item.author is defined %}
                    {{ item.author.name }}
                {% else %}
                    не указан
                {% endif %}
            </div>
        </div>
    {% endfor %}
{% endblock %}