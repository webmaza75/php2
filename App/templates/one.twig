{% extends 'index-twig.html' %}
{% block title %} Просмотр новости {% endblock %}
{% block heading %} Просмотр новости {% endblock heading %}
{% block content %}
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">
                {% if item.title is defined %}
                    {{ item.title }}
                {% else %}
                    -= Без заголовка =-
                {% endif %}
            </h3>
        </div>
        <div class="panel-body"> Автор:
            {% if item.author is defined %}
                {{ item.author.name }}
            {% else %}
                не указан
            {% endif %}
        </div>
    </div>
    <a class="btn btn-success" href="/">На главную</a>
{% endblock %}
